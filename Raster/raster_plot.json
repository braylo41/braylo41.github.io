{"$schema": "https://vega.github.io/schema/vega/v5.json",
"width": 960,
"height": 500,
"autosize": "none",

"data": [
{
"name": "raster",
"url": "data/Raster_data_EV.csv",
"format": {"type": "csv", "parse": "auto"}
},
{
"name": "states",
"url": "data/states-10m.json",
"format": {"type": "topojson", "feature": "states"},
"transform": [
{ "type": "lookup", "from": "raster", "key": "name", "fields": ["properties.name"], "values": ["energyCost(¢)", "Registration Count of EV’s", "gas($)", "gasMidGrade($)", "gasPrem($)", "diesel($)", "Pop", "costPerMileWithEV($)", "costPerMileWithGasCar($)"] }
]
}
],

"projections": [
{
"name": "projection",
"type": "albersUsa"
}
],
"signals": [
  {
    "name": "selection",
    "value": "energyCost",
    "bind": {
      "input": "select", "options": ["energyCost(¢)", "Registration Count of EV’s", "gas($)", "gasMidGrade($)", "gasPrem($)", "diesel($)", "Pop", "costPerMileWithEV($)", "costPerMileWithGasCar($)"]
    }}

],
"scales": [
{
"name": "color",
"type": "linear",
"domain": {
  "field": {
    "signal": "selection"
  },
  "data": "states"
},
"range": {"scheme": "yelloworangered"
}
}
],

"legends": [
{
"fill": "color",
"orient": "bottom-right",
"title": {"signal": "selection"}
}
],

  "marks": [
    {
      "type": "shape",
      "from": {"data": "states"},
      "encode": {
        "update": { "fill": {"scale": "color", "field": {"signal": "selection"}}}
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    }
  ]
}
